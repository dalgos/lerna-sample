{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "sourceMap": true,
    "module":"commonjs",
    // "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    // "inlineSources": true,
    // "inlineSourceMap": true,
    // "outFile": "dist/index.js"
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "build"]
}
